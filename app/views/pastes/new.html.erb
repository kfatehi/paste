<h1>New paste</h1>

<% form_for(@paste) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author, :value=>'anonymous' %>
  </p>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :value=>'untitled' %>
  </p>
  <p>
    <%= f.label :language %><br />
    <%= f.select :language, languages %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', pastes_path %>

